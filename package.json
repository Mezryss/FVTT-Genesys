		"@vue/eslint-config-prettier": "^9.0.0",
		"@vue/eslint-config-typescript": "^12.0.0",
		"@yeger/vue-masonry-wall": "^5.0.6",
		"concurrently": "^7.6.0",
		"dotenv": "^16.0.3",
		"dotenv-expand": "^10.0.0",
		"eslint": "^8.56.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-vue": "^9.21.0",
		"gulp": "^4.0.2",
		"gulp-clean": "^0.4.0",
		"gulp-yaml": "^2.0.4",
		"gulp-zip": "^5.1.0",
